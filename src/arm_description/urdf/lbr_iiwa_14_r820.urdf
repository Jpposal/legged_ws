  <gazebo>
    <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
      <!-- 可选参数：更新频率 -->
      <robotNamespace>/</robotNamespace>
      <controlPeriod>0.001</controlPeriod>
      <legacyModeNS>true</legacyModeNS>
    </plugin>
  </gazebo>

  <!-- ===================================================== -->
  <!-- Gazebo 材质与地面摩擦配置 -->
  <!-- ===================================================== -->
  <gazebo reference="base_link">
    <material>Gazebo/Gray</material>
    <mu1>10.0</mu1>         <!-- 摩擦系数 -->
    <mu2>10.0</mu2>
    <kp>1000000.0</kp>
    <kd>1.0</kd>
    <fdir1>0 0 0</fdir1>
  </gazebo>
<!-- payload block: 固定负载模拟 -->
<joint name="payload_joint" type="fixed">
  <parent link="link_7"/>
  <child link="payload_link"/>
  <origin xyz="0 0 0.2" rpy="0 0 0"/>
</joint>

<link name="payload_link">
  <inertial>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <mass value="2.0"/>  <!-- 2kg 负载 -->
    <inertia
      ixx="0.01" ixy="0" ixz="0"
      iyy="0.01" iyz="0"
      izz="0.01"/>
  </inertial>
  <visual>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <geometry>
      <box size="0.1 0.1 0.1"/>
    </geometry>
    <material name="payload_grey">
      <color rgba="0.5 0.5 0.5 1.0"/>
    </material>
  </visual>
  <collision>
    <geometry>
      <box size="0.1 0.1 0.1"/>
    </geometry>
  </collision>
</link>
  <gazebo>
    <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
      <robotNamespace>/</robotNamespace>
    </plugin>
  </gazebo>
  <gazebo>
    <plugin name="link_accel_plugin" filename="libgazebo_link_accel_plugin.so">
      <updateRate>500.0</updateRate>
      <robotNamespace>/</robotNamespace>
      <topicName>/gazebo/link_accel</topicName>
      <gaussianNoise>0.0</gaussianNoise>
    </plugin>
  </gazebo>

  <!-- Ground Truth Pose Plugin -->
  <gazebo>
    <plugin name="p3d_base_controller" filename="libgazebo_ros_p3d.so">
      <alwaysOn>true</alwaysOn>
      <updateRate>100.0</updateRate>
      <bodyName>link_7</bodyName>
      <topicName>/ee_pose_ground_truth</topicName>
      <gaussianNoise>0.0</gaussianNoise>
      <frameName>world</frameName>
      <xyzOffsets>0 0 0</xyzOffsets>
      <rpyOffsets>0 0 0</rpyOffsets>
    </plugin>
  </gazebo>
</robot>
  